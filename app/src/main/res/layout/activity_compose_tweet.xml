<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.restclienttemplate.activities.ComposeTweetActivity">

    <Button
        android:id="@+id/btCancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:onClick="didTapCancelButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/close_button"
        tools:text="@string/cancel" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivProfileImage"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        tools:background="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_toLeftOf="@+id/ivProfileImage"
        tools:text="Sagar Mutha"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHandle"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_toLeftOf="@+id/ivProfileImage"
        tools:text="Sagar"/>

    <EditText
        android:id="@+id/etTweet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:gravity="top|left"
        android:hint="@string/whats_happening"
        tools:text="TextView" />

    <View
        android:id="@+id/grayView1"
        android:layout_width="match_parent"
        android:layout_below="@+id/etTweet"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/dark_gray"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btTweet"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:onClick="didTapTweetButton"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/grayView1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/twitter_blue"
        android:textColor="@android:color/white"
        android:text="@string/tweet" />

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btTweet"
        android:layout_toLeftOf="@+id/btTweet"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        tools:text="140" />

</RelativeLayout>
